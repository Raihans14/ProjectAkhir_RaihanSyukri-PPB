<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    tools:context=".home_activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/logo"/>

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"/>

    <TextView
        android:id="@+id/desk"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="380dp"
        android:padding="16dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dimboregular"
        android:text="Provinsi Sumatera Barat memiliki 34 (tiga puluh empat) gunung yang tersebar di 7 (tujuh) kabupaten/kota dari 19 (sembilan belas) kabupaten/kota yang ada. Gunung yang tertinggi adalah Gunung Talamau dengan ketinggian 2.913 meter, sedangkan gunung yang terendah adalah Gunung Galanggang dengan ketinggian 20 meter. Kedua gunung tersebut berada di Kabupaten Pasaman Barat. Sedangkan Gunung Kerinci terletak di perbatasan provinsi Sumatera Barat, Jambi."
        />

    <Button
        android:id="@+id/gunung1"
        android:layout_width="180dp"
        android:text="GUNUNG"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:layout_marginStart="120dp"
        android:backgroundTint="@color/cream"/>
    <Button
        android:id="@+id/profil"
        android:layout_width="wrap_content"

        android:text="PROFIL"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/cream"/>


</RelativeLayout>