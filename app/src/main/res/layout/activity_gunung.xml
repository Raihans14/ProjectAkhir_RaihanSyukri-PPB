<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    tools:context=".Gunung">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gunung_txt1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="GUNUNG SUMBAR"
            android:textSize="25dp"
            android:background="@drawable/background_header"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/gunung_gambar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gunung_txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/singgalang"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/gunung_txt2"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/gunung_gambar1"
            android:text="SINGGALANG"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/cream"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/gunung_gambar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gunung_txt2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/marapi"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/gunung_txt3"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/gunung_gambar2"
            android:text="MARAPI"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/cream"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/gunung_gambar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gunung_txt3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/tandikek"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/gunung_txt4"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/gunung_gambar3"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/cream"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="TANDIKAT"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/gunung_gambar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gunung_txt4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/talamau"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/gunung_txt5"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/gunung_gambar4"
            android:text="TALAMAU"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/cream"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/gunung_gambar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gunung_txt5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/sago"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/gunung_txt6"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/gunung_gambar5"
            android:text="SAGO"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/cream"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/gunung_gambar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gunung_txt6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/pasaman"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/gunung_txt7"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/gunung_gambar6"
            android:text="PASAMAN"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/cream"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</ScrollView>